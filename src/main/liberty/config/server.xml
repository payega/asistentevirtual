<?xml version="1.0" encoding="UTF-8"?>
<server description="Default server">

    <!-- Enable features -->
    <featureManager>
        <feature>webProfile-7.0</feature>
        <feature>localConnector-1.0</feature>
    </featureManager>

	<library id="MySQLLib">    
  	    <fileset dir="${shared.resource.dir}/mysql" includes="*.jar"/>
	</library>

  	<dataSource id="DSms" jndiName="jdbc/DS" transactional="false" type="javax.sql.DataSource">
        <jdbcDriver libraryRef="MySQLLib"/>
        <properties databaseName="${env.database}" password="${env.pass}" portNumber="${env.port}" serverName="${env.servername}" user="${env.user}"/>
    </dataSource>
    <!-- To allow access to this server from a remote client host="*" has been added to the following element -->
    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>


 <webApplication id="AsistenteVirtual" location="asistentevirtual-1.0-SNAPSHOT.war" name="AsistenteVirtual">
 </webApplication>
</server>